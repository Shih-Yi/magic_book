$(document).on('click', ".book-destroy",
  function(){
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
      if (result.isConfirmed) {
        let id = $(this).data("id")
        $.ajax({
          url: "/admin/books/" + id,
          method: 'delete',
        })
        .done(function (ret) {
          $('#the_datatable').DataTable().ajax.reload();
          $(document).Toasts('create', {
            delay: 5000,
            autohide: true,
            class: 'bg-danger',
            title: 'Delete',
            body: ret.result,
          })
        })
      }
    })
  }
)


$(document).on('click', ".status-event",
  function(){
    let self = $(this)
    let id = $(this).data("id")
    console.log(id)
    $.ajax({
      url: "/admin/books/" + id + "/update_status",
      type: 'POST',
      data: JSON.stringify({ id: id }),
      contentType: 'application/json',
    })
    .done(function (ret) {
      console.log(ret)
      const status = ret.status;
      const id = ret.id;
      switch (status) {
        case 'published':
          $('.publish-type-' + id).removeClass("bg-gradient-danger");
          $('.publish-type-' + id).addClass("bg-gradient-info");
          $('.publish-type-' + id).text('發佈');
          break;
        case 'unpublished':
          $('.publish-type-' + id).removeClass("bg-gradient-info");
          $('.publish-type-' + id).addClass("bg-gradient-danger");
          $('.publish-type-' + id).text('未發佈');
          break;
      }
    })
  }
)

