<script>

$(document).on('click', ".status-event",
  function(){
    let self = $(this)
    let id = $(this).data("id")
    console.log(id)
    $.ajax({
      url: "/admin/books/" + id + "/update_status",
      type: 'POST',
      data: JSON.stringify({ id: id }),
      contentType: 'application/json',
    })
    .done(function (ret) {
      console.log(ret)
      const status = ret.status;
      const id = ret.id;
      switch (status) {
        case 'published':
          $('.pub-text').removeClass("text-danger");
          $('.pub-text').addClass("text-info");
          $('.pub-text').text('(發佈)');
		  $('.btn-pub').removeClass("btn-outline-info");
		  $('.btn-pub').addClass("btn-outline-danger");
		  $('.btn-pub').text('取消發佈繪本');
          break;
        case 'unpublished':
          $('.pub-text').removeClass("text-info");
          $('.pub-text').addClass("text-danger");
          $('.pub-text').text('(未發佈)');
		  $('.btn-pub').removeClass("btn-outline-danger");
		  $('.btn-pub').addClass("btn-outline-info");
		  $('.btn-pub').text('發佈繪本');
          break;
      }
    })
  }
)

</script>
