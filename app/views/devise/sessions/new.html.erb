<div class="container ">
  <div class="row login-row">
    <div class="login-container col-xl-4 col-lg-5 col-md-6 col-sm-8 col-12">
      <div class="login-title text-center">
        <!--  <h2><span><%#= link_to 'Zizibooks', root_path%></span></h2> -->
      </div>
      <div class="login-content">
        <div class="login-header ">
          <h4><strong>管理員登入</strong></h4>
        </div>
        <div class="login-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group ">
              <div class="pos-r">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "帳號：", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="pos-r">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "密碼：", class: "form-control" %>
              </div>
            </div>
            <!-- <div class="form-group text-right">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            </div> -->
            <div class="form-group form-group-login">
              <button type="submit" class="form-btn form-btn-login">
                <span>登入</span>
              </button>
            </div>
          <% end %>
          <%#= link_to "Continue with Facebook", user_facebook_omniauth_authorize_path, method: :post, class: "btn btn-facebook" %>
        </div>
        <!-- <div class="login-footer text-center template">
          <%= render "devise/shared/links" %>
        </div> -->
        <!-- end  login-body -->
      </div><!-- end  login-content -->
    </div>  <!-- end  login-container -->
  </div>
</div><!-- end container -->
